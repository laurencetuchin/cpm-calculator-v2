---
import Layout from '~/layouts/PageLayout.astro';
import GetStartedComponent from '~/components/common/GetStarted';

const metadata = {
  title: 'Get Started',
};
---

<Layout metadata={metadata}>
  <section class="relative px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-transparent to-purple-50 dark:from-slate-900 dark:via-transparent dark:to-slate-900 opacity-70 -z-10 pointer-events-none"></div>
    <h1 class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter mb-12 text-center bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400">
      Get Started
    </h1>
    <GetStartedComponent client:load />
  </section>
</Layout>
