---
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About CPM Calculator - Your Complete Marketing Calculator Suite',
  description: 'Discover how CPM Calculator and our suite of marketing tools help you save time calculating metrics, so you can focus on what matters - optimizing your campaigns and driving results.',
  canonical: 'https://cpmcalculator.online/about',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?fit=crop&w=2070&q=80',
      alt: 'Marketing analytics dashboard showing various marketing calculations',
    }}
  >
    <Fragment slot="title">
      Streamlining marketing metrics <br />
      <span class="text-accent dark:text-white highlight">so you can focus on growth</span>
    </Fragment>

    <Fragment slot="subtitle">
      At CPM Calculator, we're more than just a CPM calculator - we're your comprehensive marketing metrics solution. We understand that time spent calculating various advertising metrics is time away from optimizing your campaigns. That's why we've built a suite of essential marketing calculators and tools that handle the math, so you can focus on strategy and creativity. From CPM to CPC, and influencer marketing metrics, we've got you covered.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Growing Impact"
    stats={[
      { title: 'Monthly Users', amount: '50K+' },
      { title: 'Hours Saved Monthly', amount: '10K+' },
      { title: 'Marketing Calculators', amount: '15+' },
      { title: 'Satisfied Marketers', amount: '100K+' },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Core Values"
    subtitle="We're committed to making marketing calculations effortless, allowing marketers of all levels to spend more time on strategic campaign optimization."
    items={[
      {
        title: 'Time-Saving Efficiency',
        description:
          'Our suite of calculators automates complex marketing metrics, turning minutes of calculations into seconds - giving you more time for strategic planning.',
      },
      {
        title: 'Comprehensive Solutions',
        description:
          'From CPM to CPC, influencer metrics to impression costs - we provide all the calculation tools modern marketers need in one convenient platform.',
      },
      {
        title: 'Marketer Empowerment',
        description:
          'Beyond calculations, we offer insights, guides, and resources to help you understand your metrics and make data-driven campaign decisions.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Why Choose Our Platform"
    subtitle="Join thousands of marketers who trust our suite of calculators to streamline their workflow and improve campaign performance."
    isReversed={true}
    callToAction={{
      text: 'Try Our Calculators',
      href: '/',
    }}
    items={[
      {
        title: 'All-in-One Solution',
        description: 'Access multiple marketing calculators in one place - CPM, CPC, Cost per Impression, Influencer CPM, and more.',
        icon: 'tabler:calculator',
      },
      {
        title: 'Time-Saving Tools',
        description:
          'Spend less time on calculations and more time optimizing your campaigns with our efficient, user-friendly tools.',
        icon: 'tabler:clock',
      },
      {
        title: 'Marketing Resources',
        description:
          'Get access to comprehensive guides, case studies, and best practices to enhance your marketing knowledge and skills.',
        icon: 'tabler:book',
      },
    ]}
  />

</Layout>
