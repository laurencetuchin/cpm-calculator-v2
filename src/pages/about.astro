---
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About CPM Calculator - Your Marketing Analytics Partner',
  description: 'Learn how CPM Calculator helps marketers optimize their ad campaigns with precise cost per mille calculations and data-driven insights.',
  canonical: 'https://cpmcalculator.online/about',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?fit=crop&w=2070&q=80',
      alt: 'Marketing analytics dashboard showing CPM calculations',
    }}
  >
    <Fragment slot="title">
      Empowering marketers with <br />
      <span class="text-accent dark:text-white highlight">precise CPM insights</span>
    </Fragment>

    <Fragment slot="subtitle">
      At CPM Calculator, we understand the challenges marketers face in optimizing their advertising spend. Founded by digital marketing veterans, our mission is to provide simple yet powerful tools that help you make data-driven decisions about your CPM campaigns. Whether you're managing social media ads, display campaigns, or traditional media buys, we're here to help you maximize your ROI.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Impact"
    stats={[
      { title: 'Monthly Users', amount: '50K+' },
      { title: 'Calculations Made', amount: '1M+' },
      { title: 'Marketing Tools', amount: '15+' },
      { title: 'Years of Experience', amount: '10+' },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Core Values"
    subtitle="We believe in making marketing analytics accessible, actionable, and valuable for everyone - from solo entrepreneurs to enterprise teams."
    items={[
      {
        title: 'Accuracy First',
        description:
          'We prioritize precise calculations and reliable data to ensure you can make confident decisions about your advertising investments.',
      },
      {
        title: 'User-Centric Innovation',
        description:
          'Every feature we develop is based on real user feedback and needs, making our tools truly practical for marketing professionals.',
      },
      {
        title: 'Educational Empowerment',
        description:
          'Beyond calculations, we provide actionable insights and resources to help you understand and optimize your marketing metrics.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Why Choose Us"
    subtitle="Join thousands of marketers who trust CPM Calculator to optimize their advertising campaigns and improve their ROI."
    isReversed={true}
    callToAction={{
      text: 'Try Our Calculator',
      href: '/',
    }}
    items={[
      {
        title: 'Comprehensive Tools',
        description: 'Access a suite of marketing calculators and tools designed specifically for digital advertising optimization.',
        icon: 'tabler:calculator',
      },
      {
        title: 'Expert Resources',
        description:
          'Benefit from our regularly updated blog posts, guides, and case studies written by experienced marketing professionals.',
        icon: 'tabler:book',
      },
      {
        title: 'Community-Driven',
        description:
          'Join a growing community of marketers sharing insights and strategies for better campaign performance.',
        icon: 'tabler:users',
      },
    ]}
  />

</Layout>
