--- 
import Layout from '~/layouts/PageLayout.astro';
import CPMToCPCCalculator from '~/components/common/CPMToCPCCalculator';

const metadata = {
  title: 'CPM to CPC Calculator',
  description: 'Convert CPM to CPC easily with our free online calculator. Optimize your ad spend and compare pricing models at CPM Calculator. Fast, accurate, and user-friendly.',
};
---


    <Layout metadata={metadata}>
      <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
        <h1 class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter mb-8 text-center">
          CPM to CPC Calculator
        </h1>
        <CPMToCPCCalculator client:load  />
      </section>
    </Layout>




