--- 
import Layout from '~/layouts/PageLayout.astro';
import CPMToCPCCalculator from '~/components/common/CPMToCPCCalculator';
import RelatedTools from '~/components/common/RelatedTools.astro';

const metadata = {
  title: 'CPM to CPC Calculator | Convert Ad Pricing Models',
  description: 'Convert CPM to CPC easily with our free online calculator. Optimize your ad spend and compare pricing models at CPM Calculator. Fast, accurate, and user-friendly.',
  canonical: 'https://cpmcalculator.online/cpm-to-cpc-calculator',
  openGraph: {
    type: 'website',
    url: 'https://cpmcalculator.online/cpm-to-cpc-calculator',
    title: 'CPM to CPC Calculator | Convert Ad Pricing Models',
    description: 'Convert CPM to CPC easily with our free online calculator. Optimize your ad spend and compare pricing models.',
    images: [
      {
        url: '~/assets/images/default.png',
        width: 1200,
        height: 630,
        alt: 'CPM to CPC Calculator - Free Conversion Tool',
      },
    ],
  },
  twitter: {
    card: 'summary_large_image',
    title: 'CPM to CPC Calculator | Convert Ad Pricing Models',
    description: 'Convert CPM to CPC easily with our free online calculator. Optimize your ad spend and compare pricing models.',
  },
};
---


    <Layout metadata={metadata}>
      <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
        <h1 class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter mb-8 text-center">
          CPM to CPC Calculator
        </h1>
        <CPMToCPCCalculator client:load  />
        
        <!-- Related Tools Section -->
        <div class="mt-12">
          <RelatedTools currentPage="/cpm-to-cpc-calculator" />
        </div>
      </section>
    </Layout>




