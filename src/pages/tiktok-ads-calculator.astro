---
import Layout from '~/layouts/PageLayout.astro';
import TiktokAdsCalculatorComponent from '~/components/common/TiktokAdsCalculator';
import RelatedTools from '~/components/common/RelatedTools.astro';

const metadata = {
  title: 'TikTok Ads Calculator - Calculate CPM, CPC, CTR & More for TikTok Advertising',
  description: 'Free TikTok ads calculator to measure key metrics like CPM, CPC, CTR, CPA, engagement rate and ROAS. Optimize your TikTok advertising campaigns with data-driven insights.',
  canonical: 'https://cpmcalculator.online/tiktok-ads-calculator',
  openGraph: {
    type: 'website',
    url: 'https://cpmcalculator.online/tiktok-ads-calculator',
    title: 'TikTok Ads Calculator - Calculate CPM, CPC, CTR & More',
    description: 'Free TikTok ads calculator to measure key metrics like CPM, CPC, CTR, CPA, engagement rate and ROAS. Optimize your TikTok advertising campaigns.',
    images: [
      {
        url: '~/assets/images/default.png',
        width: 1200,
        height: 630,
        alt: 'TikTok Ads Calculator - Free Marketing Tool',
      },
    ],
  },
  twitter: {
    card: 'summary_large_image',
    title: 'TikTok Ads Calculator - Calculate CPM, CPC, CTR & More',
    description: 'Free TikTok ads calculator to measure key metrics like CPM, CPC, CTR, CPA, engagement rate and ROAS.',
  },
};
---

<Layout metadata={metadata}>
  <section class="relative overflow-hidden min-h-screen flex flex-col justify-center">
    <!-- Animated Background -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-purple-500/30 rounded-full mix-blend-multiply filter blur-3xl opacity-70 animate-blob"></div>
      <div class="absolute top-0 right-1/4 w-96 h-96 bg-cyan-500/30 rounded-full mix-blend-multiply filter blur-3xl opacity-70 animate-blob animation-delay-2000"></div>
      <div class="absolute -bottom-32 left-1/3 w-96 h-96 bg-pink-500/30 rounded-full mix-blend-multiply filter blur-3xl opacity-70 animate-blob animation-delay-4000"></div>
    </div>

    <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8 lg:py-20 max-w-6xl">
      <div class="text-center mb-12 animate-fade-in-down">
        <h1 class="font-bold font-heading text-5xl md:text-6xl leading-tighter tracking-tighter mb-6">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 via-pink-500 to-cyan-400 dark:from-purple-400 dark:via-pink-300 dark:to-cyan-300">
            TikTok Ads Calculator
          </span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed">
          Unlock the potential of your campaigns. Calculate CPM, CPC, CTR, and ROAS with precision to supercharge your TikTok advertising strategy.
        </p>
      </div>

      <div class="relative z-10 animate-fade-in-up">
        <div class="absolute inset-0 bg-gradient-to-r from-purple-500/10 to-cyan-500/10 rounded-3xl transform rotate-1 scale-105 blur-xl"></div>
        <div class="relative bg-white/60 dark:bg-gray-900/60 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 dark:border-gray-700/30 p-1">
          <TiktokAdsCalculatorComponent client:load />
        </div>
      </div>

      <div class="mt-24 prose prose-lg max-w-4xl mx-auto dark:prose-invert animate-fade-in-up animation-delay-500">
        <div class="bg-white/40 dark:bg-gray-800/40 backdrop-blur-md rounded-2xl p-8 border border-white/20 dark:border-gray-700/30 shadow-lg">
          <h2 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-600 to-pink-500 mb-6">Why Use a TikTok Ads Calculator?</h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6">
            TikTok has become one of the most powerful platforms for digital advertising. Our calculator helps you:
          </p>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 list-none pl-0">
            <li class="flex items-center space-x-3 text-gray-700 dark:text-gray-300">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-purple-100 dark:bg-purple-900/50 flex items-center justify-center text-purple-600 dark:text-purple-300">âœ“</span>
              <span>Measure campaign performance across key metrics</span>
            </li>
            <li class="flex items-center space-x-3 text-gray-700 dark:text-gray-300">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-pink-100 dark:bg-pink-900/50 flex items-center justify-center text-pink-600 dark:text-pink-300">âœ“</span>
              <span>Optimize your ad spend for better results</span>
            </li>
            <li class="flex items-center space-x-3 text-gray-700 dark:text-gray-300">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-cyan-100 dark:bg-cyan-900/50 flex items-center justify-center text-cyan-600 dark:text-cyan-300">âœ“</span>
              <span>Compare different campaign strategies</span>
            </li>
            <li class="flex items-center space-x-3 text-gray-700 dark:text-gray-300">
              <span class="flex-shrink-0 w-6 h-6 rounded-full bg-blue-100 dark:bg-blue-900/50 flex items-center justify-center text-blue-600 dark:text-blue-300">âœ“</span>
              <span>Make data-driven decisions</span>
            </li>
          </ul>
        </div>

        <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-white/40 dark:bg-gray-800/40 backdrop-blur-md rounded-2xl p-8 border border-white/20 dark:border-gray-700/30 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <h3 class="text-2xl font-bold text-purple-600 dark:text-purple-400 mb-4">Campaign Types</h3>
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold text-gray-800 dark:text-white">In-Feed Ads</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">Native ads in For You feed. CPM: $1.00-$6.00</p>
              </div>
              <div>
                <h4 class="font-semibold text-gray-800 dark:text-white">TopView Ads</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">Premium placement on app open. CPM: $20.00-$30.00</p>
              </div>
            </div>
          </div>

          <div class="bg-white/40 dark:bg-gray-800/40 backdrop-blur-md rounded-2xl p-8 border border-white/20 dark:border-gray-700/30 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <h3 class="text-2xl font-bold text-pink-600 dark:text-pink-400 mb-4">Key Metrics</h3>
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold text-gray-800 dark:text-white">CPM (Cost Per Mille)</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">Cost per 1,000 impressions. Avg: $2.00-$10.00</p>
              </div>
              <div>
                <h4 class="font-semibold text-gray-800 dark:text-white">CTR (Click-Through Rate)</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">Percentage of clicks. Avg: 1%-3%</p>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-12 bg-gradient-to-br from-purple-900/5 to-pink-900/5 dark:from-purple-900/20 dark:to-pink-900/20 rounded-3xl p-8 border border-purple-100 dark:border-purple-900/30">
          <h2 class="text-3xl font-bold text-center mb-8">Tips for Optimizing TikTok Ads</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
             <div class="text-center p-4">
               <div class="w-12 h-12 mx-auto bg-purple-100 dark:bg-purple-900/50 rounded-full flex items-center justify-center text-2xl mb-4">ðŸŽ¨</div>
               <h4 class="font-bold mb-2">Creative Testing</h4>
               <p class="text-sm text-gray-600 dark:text-gray-400">Test different ad formats and creative approaches regularly</p>
             </div>
             <div class="text-center p-4">
               <div class="w-12 h-12 mx-auto bg-pink-100 dark:bg-pink-900/50 rounded-full flex items-center justify-center text-2xl mb-4">ðŸŽ¯</div>
               <h4 class="font-bold mb-2">Precise Targeting</h4>
               <p class="text-sm text-gray-600 dark:text-gray-400">Target specific audience segments for better engagement</p>
             </div>
             <div class="text-center p-4">
               <div class="w-12 h-12 mx-auto bg-cyan-100 dark:bg-cyan-900/50 rounded-full flex items-center justify-center text-2xl mb-4">ðŸ“Š</div>
               <h4 class="font-bold mb-2">Data Analysis</h4>
               <p class="text-sm text-gray-600 dark:text-gray-400">Monitor metrics and adjust campaigns based on performance</p>
             </div>
          </div>
        </div>
      </div>
      
      <!-- Related Tools Section -->
      <div class="mt-24">
        <RelatedTools currentPage="/tiktok-ads-calculator" />
      </div>
    </div>
  </section>
</Layout>
